.input-field
    text-align left
    
    .full-width
        width 100%
    
    label
        position static
        left 0
        text-align left 
        cursor default
        color: #000

    .multiselect__tags,
    .mx-input-wrapper input,
    input[type=text]:not(.browser-default)
        border: 1px solid #9e9e9e
        border-radius: 4px
        margin-bottom 0
        height 40px
        padding-left 10px
        padding-top 0
        display flex
        align-items center
        box-sizing: border-box

        &:focus
            border-color: #26a69a

        .multiselect__single,
        .multiselect__input,
        .multiselect__placeholder
            padding-left 0 !important
            margin-bottom 0

    .multiselect__select
        width 30px
 
.mx-datepicker-main
    left 0 !important
    top auto !important
